{
  "swagger" : "2.0",
  "info" : {
    "version" : "v1",
    "title" : "Steambuddy TypeScript API"
  },
  "tags" : [ {
    "name" : "GameResource"
  }, {
    "name" : "UserResource"
  } ],
  "paths" : {
    "internal/api/game/games" : {
      "get" : {
        "tags" : [ "GameResource" ],
        "summary" : "Get the list of all games.",
        "description" : "Returns all games.",
        "operationId" : "getGames",
        "responses" : {
          "200" : {
            "description" : "successful operation",
            "schema" : {
              "type" : "array",
              "items" : {
                "$ref" : "#/definitions/GameDTO"
              }
            }
          }
        }
      }
    },
    "internal/api/user/authenticate" : {
      "put" : {
        "tags" : [ "UserResource" ],
        "summary" : "Authenticate a user.",
        "description" : "Returns the logged in User.",
        "operationId" : "authenticateUser",
        "parameters" : [ {
          "in" : "body",
          "name" : "body",
          "required" : false,
          "schema" : {
            "$ref" : "#/definitions/UserDTO"
          }
        } ],
        "responses" : {
          "200" : {
            "description" : "successful operation",
            "schema" : {
              "$ref" : "#/definitions/UserDTO"
            }
          }
        }
      }
    },
    "internal/api/user/register" : {
      "post" : {
        "tags" : [ "UserResource" ],
        "summary" : "Register a new user.",
        "description" : "Returns the created User.",
        "operationId" : "registerUser",
        "parameters" : [ {
          "in" : "body",
          "name" : "body",
          "required" : false,
          "schema" : {
            "$ref" : "#/definitions/UserDTO"
          }
        } ],
        "responses" : {
          "200" : {
            "description" : "successful operation",
            "schema" : {
              "$ref" : "#/definitions/UserDTO"
            }
          }
        }
      }
    },
    "internal/api/user/update" : {
      "put" : {
        "tags" : [ "UserResource" ],
        "summary" : "Update a user.",
        "description" : "Returns the updated User.",
        "operationId" : "updateUser",
        "parameters" : [ {
          "in" : "body",
          "name" : "body",
          "required" : false,
          "schema" : {
            "$ref" : "#/definitions/UserDTO"
          }
        } ],
        "responses" : {
          "200" : {
            "description" : "successful operation",
            "schema" : {
              "$ref" : "#/definitions/UserDTO"
            }
          }
        }
      }
    }
  },
  "definitions" : {
    "GameDTO" : {
      "type" : "object",
      "properties" : {
        "id" : {
          "type" : "integer",
          "format" : "int64"
        },
        "name" : {
          "type" : "string"
        },
        "year" : {
          "type" : "integer",
          "format" : "int32"
        },
        "image" : {
          "type" : "string"
        },
        "text" : {
          "type" : "string"
        }
      }
    },
    "UserDTO" : {
      "type" : "object",
      "properties" : {
        "id" : {
          "type" : "integer",
          "format" : "int64"
        },
        "name" : {
          "type" : "string"
        },
        "password" : {
          "type" : "string"
        },
        "friends" : {
          "type" : "array",
          "uniqueItems" : true,
          "items" : {
            "$ref" : "#/definitions/UserDTO"
          }
        }
      }
    }
  }
}